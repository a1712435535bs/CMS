<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.dell.afinal.View.CircleImageView
        android:id="@+id/user_head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_head"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_toEndOf="@+id/user_head_image"
        android:layout_alignTop="@+id/user_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="用户名"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:text="05-01 1:30"/>

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_margin="8dp"
        android:text="帖子标题写在这里"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帖子正文写在这里"
        android:layout_below="@+id/post_title"
        android:layout_margin="8dp"
        android:maxLines="3"
        android:ellipsize="end"/>

    <View
        android:layout_below="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/divider"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>